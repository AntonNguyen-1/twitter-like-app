<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'User profile', "/users/#{user[:id]}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', '/'%>

