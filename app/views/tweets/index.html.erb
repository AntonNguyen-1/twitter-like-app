<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Posted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <% puts tweet.title %>
      <tr>
        <td><%= tweet.title %></td>
        <td><%= tweet.body %></td>
        <td><%= tweet.user.username %></td>
        <td><%= tweet.created_at %></td>
        <% if current_user %>
          <td><%= link_to 'Follow user', tweet %></td>
        <% end %>
        <td><%= link_to 'User profile', "/users/#{tweet[:user_id]}" %></td>
<!--        <td><%#= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', '/'%>
